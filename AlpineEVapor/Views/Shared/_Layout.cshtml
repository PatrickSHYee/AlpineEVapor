<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="http://alpineevapor.com//image/103003251_scaled_171x109.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Products")">Products</a></li>
                    <li><a href="@Url.Action("Ecig", "Products")">E-cigarettes</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li>
                        <div class="input-group searchBar text-right">
                            <input type="text" class="form-control" placeholder="Search" />
                            <span class="input-group-addon">
                                <button class="glyphicon glyphicon-search"></button>
                            </span>
                        </div>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
                <div class="bottom text-center">
                    <address>
                        1412 S. Parker Rd.
                        Denver, CO 80231<br />
                        (720) 535-8323
                    </address>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-sm-4">&copy; @DateTime.Now.Year - PY Development Application</div>
            <div class="col-sm-4 text-center">
                <address>
                    1412 S. Parker Rd. +
                    Denver, CO 80231<br />
                    (720) 535-8323
                </address>
            </div>
            <div class="col-sm-4 text-right">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Products")">Products</a></li>
                    <li><a href="@Url.Action("Ecig", "Products")">E-cigarettes</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
